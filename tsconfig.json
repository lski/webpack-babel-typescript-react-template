{
	"compilerOptions": {
		"target": "esnext",
		"allowJs": true,
		"strict": true,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ES2020",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "preserve",
		"sourceMap": true,
		"baseUrl": "./",
		"typeRoots": ["./src/types", "./node_modules/@types/"]
	},
	"include": ["src"]
}
